    <servlet>
        <servlet-name>java</servlet-name>
        <servlet-class>AddItemServlet.java</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemServlet</servlet-name>
        <servlet-class>work.AddItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>work.ViewCartServlet</servlet-class>
